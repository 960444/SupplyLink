<div class="profile">
<div class="profile-top">
    YOUR PROFILE
</div>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand">SUPPLYLINK</a>
  <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <li class="nav-item active">
        <a class="nav-link" href="/home"><i class="icon-home"></i>Home <span class="sr-only">(current)</span></a>
      </li>
    </ul>
    <button type="button" class="btn btn-outline-danger"><i class="icon-logout  "></i>Logout</button>
  </div>
</nav>
<div class="col-md-7 m-auto">
<div class="card card-body verify-card">
  <div class="row">
  <div class="tile">
      <img src="images/profile.svg" height="150" width="210">
  </div>
  <div class="info">
    <ul class="list-group">
      <li class="list-group-item">Name: <div id="name"><%= name %></div></li>
      <li class="list-group-item">Email: <%= email %></li>
      <li class="list-group-item">Address: <div id="address"><%= address %></div></li>
      <li class="list-group-item">Role: <div id="role"><%= role %></div></li>
      <li class="list-group-item">Organisation: <div id="organisation"><%= organisation %></div></li>
      <li class="list-group-item">Verified: <%= verified %></li>
    </ul>
  </div>
  </div>
  <div class="approve-btn">
      <p><a href="/approve"><button type="submit" class="btn btn-primary btn-lg custom-btn">Approve Users</button></a><p>
  </div>
  <%if (verified == true) { %>
    <span style="margin-left: 20px;color: black;">You have been verified!</span>
    <form onSubmit="App.createParticipant(); return false;">
        <button style="margin-left: 70px; margin-top: 20px;"type="submit" class="btn btn-primary btn-lg custom-btn">Join Network</button>
    </form>
  <% } %>
</div>
</div>
</div>
