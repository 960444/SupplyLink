<div class="profile">
<div class="profile-top">
    VERIFY USERS
</div>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand">SUPPLYLINK</a>
  <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <li class="nav-item active">
        <a class="nav-link" href="/home"><i class="icon-home"></i>Home <span class="sr-only">(current)</span></a>
      </li>
    </ul>
    <button type="button" class="btn btn-outline-danger"><i class="icon-logout"></i>Logout</button>
  </div>
</nav>
<div class="col-md-7 m-auto">
<div class="card card-body verify-card">
  <div class="row">
  <div class="tile-verify" style="margin-top:75px;">
      <img src="images/verify.svg" height="150" width="210">
  </div>
    <% unverified.forEach((user) => { %>
    <div class="verify-user">
    <ul class="list-group">
      <li class="list-group-item">Name: <div id="name"><%= user.name %></div></li>
      <li class="list-group-item">Email: <%= user.email %></li>
      <li class="list-group-item">Address: <div id="address"><%= user.address %></div></li>
      <li class="list-group-item">Role: <div id="role"><%= user.role %></div></li>
      <li class="list-group-item">Organisation: <div id="organisation"><%= user.organisation %></div></li>
      <li class="list-group-item" style="height:70px;">
        <form method="POST" id="approve_form" action="/approve/<%= user.name %>?_method=PUT">
          <input type="hidden" name="_method" value="put">
          <button type="submit" class="btn btn-primary btn-sml custom-btn">Verify</button>
        </form>
      </li>
    </ul>
    </div>
    <%});%>
  </div>
</div>
</div>
</div>

